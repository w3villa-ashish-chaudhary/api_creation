source "https://rubygems.org"

# Rails framework
gem "rails", "~> 8.1.2"

# Asset pipeline
gem "sprockets-rails"

# Web server
gem "puma", ">= 5.0"

# PostgreSQL for production
gem "pg", "~> 1.5"

# SQLite only for development & test
gem "sqlite3", ">= 1.4", group: [:development, :test]

# JavaScript / Hotwire / Importmap
gem "importmap-rails"
gem "turbo-rails"
gem "stimulus-rails"

# JSON API builder
gem "jbuilder"

# Reduce boot times
gem "bootsnap", require: false

# Timezone for Windows
gem "tzinfo-data", platforms: %i[windows jruby]
